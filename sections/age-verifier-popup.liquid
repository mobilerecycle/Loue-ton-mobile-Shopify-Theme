          {
            "label": "Enable",
            "value": "enable"
          },
	{
            "label": "Testing",
            "value": "test"
          }
        ],
        "default": "enable"
      },
 {
        "type": "range",
        "id": "expire",
        "min": 1,
        "max": 30,
        "step": 1,
        "default": 7,
     "unit": "day",
        "label": "Show again after (days)"
      },
      	{
        "type": "header",
        "content": "Refuse Content"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Sorry!",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "default": "<p>This content is for adults only. Please return when youâ€™re older.</p>",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "go_button_label",
        "default": "Go Back",
        "label": "Back button label"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
       "type": "color",
       "id": "overlay_color",
       "label": "Overlay color",
       "default": "#000000"
     },
     {
       "type": "color_scheme",
       "id": "color_scheme",
       "label": "t:sections.all.colors.label",
       "default": "background-1"
     }
   ],
   "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "settings": [
	{
            "type": "text",
            "id": "heading",
            "default": "Confirm your age",
            "label": "Heading"
          },
          {
            "type": "select",
            "id": "heading_size",
            "options": [
              {
                "value": "h4",
                "label": "Small"
              },
              {
                "value": "h3",
                "label": "Medium"
              },
              {
                "value": "h2",
                "label": "Large"
              }
            ],
            "default": "h3",
            "label": "Heading size"
          }
        ]
      },
{
        "type": "text",
        "name": "Text",
        "settings": [
	{
            "type": "richtext",
            "id": "text",
	    "default": "<p>Are you 18 years old or older?</p>",
            "label": "Heading"
          }
        ]
      },
{
    "type": "buttons",
    "name": "Buttons",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "accept_button_label",
        "default": "Yes, I am",
        "label": "Accept button label"
      },
      {
        "type": "text",
        "id": "refuse_button_label",
        "default": "No, I'm not",
        "label": "Refuse button label"
      }
    ]
  }
  ],
"default": {
     "blocks": [
    {
      "type": "heading"
    },
    {
      "type": "text"
    },
    {
      "type": "buttons"
    }
  ]
}
}
{% endschema %}
